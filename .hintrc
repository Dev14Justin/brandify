{
  "extends": [
    "development"
  ],
  "hints": {
    "no-inline-styles": "off",
    "axe/forms": [
      "default",
      {
        "select-name": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "min-height: auto",
          "backdrop-filter"
        ]
      }
    ]
  }
}





































/* Forms */
form {
    display: grid;
    gap: 14px
}

.input {
    width: 100%;
    padding: 12px 14px;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
}

textarea.input {
    min-height: 140px;
    resize: vertical
}

.grid {
    display: grid;
    justify-content: center;
    align-items: center;
    gap: 28px
}

/* Team Section */
.team {
  text-align: center;
  padding: 60px 20px;
  background: linear-gradient(to bottom, #ffffff, #f8f9fb);
}

.team-title {
  font-size: 2rem;
  font-weight: 700;
  color: #222;
}

.team-subtitle {
  font-size: 1rem;
  color: #666;
  margin-bottom: 40px;
}

.team-members {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 30px;
}

.member {
  background: #fff;
  border-radius: 15px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  padding: 20px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.member:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.12);
}

.member-photo {
  width: 120px;
  height: 120px;
  margin: 0 auto 15px;
  overflow: hidden;
  border-radius: 50%;
  border: 4px solid #eef2f7;
}

.member-photo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.member h3 {
  font-size: 1.1rem;
  font-weight: 600;
  margin: 5px 0;
}

.member .role {
  font-size: 0.9rem;
  color: #777;
  margin-bottom: 15px;
}

.social-links a {
  display: inline-block;
  margin: 0 5px;
  font-size: 0.9rem;
  color: #555;
  transition: color 0.3s ease;
}

.social-links a:hover {
  color: #0077b5; /* LinkedIn color as default hover */
}

/* Responsive */
@media (max-width: 768px) {
  .team-members {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .team-members {
    grid-template-columns: 1fr;
  }
}